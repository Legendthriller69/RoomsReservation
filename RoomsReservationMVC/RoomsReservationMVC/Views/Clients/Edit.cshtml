@model RoomsReservationMVC.ViewModel.ClientVM

@{
    ViewBag.Title = "Modifier le client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Modifier le client @Model.Client.Firstname @Model.Client.Name</h2>

@using (Html.BeginForm("Edit", "Clients", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(Id => Model.Client.Id)
        <div class="form-group">
            <label for="Email" class="control-label col-md-2">Adresse e-mail</label>
            <div class="col-md-10">
                <input type="text" id="Email" name="Email" class="form-control" value="@Model.Client.Email" />
            </div>
        </div>

        <div class="form-group">
            <label for="Name" class="control-label col-md-2">Nom</label>
            <div class="col-md-10">
                <input type="text" id="Name" name="Name" class="form-control" value="@Model.Client.Name" />
            </div>
        </div>

        <div class="form-group">
            <label for="Firstname" class="control-label col-md-2">Prénom</label>
            <div class="col-md-10">
                <input type="text" id="Firstname" name="Firstname" class="form-control" value="@Model.Client.Firstname" />
            </div>
        </div>
    </div>
    <div>
        <input type="submit" value="Modifier" class="btn btn-primary" />
        @Html.ActionLink("Retour", "Index", null, new { @class = "btn btn-default" })
    </div>
}
